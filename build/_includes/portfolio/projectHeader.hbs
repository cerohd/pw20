<div class="project-header">
  <h3 class="project-name">
    <a href="{{ this.url }}">
      {{#if this.name}}
        {{this.name}}
      {{else}}
        <code>
          {{this.url}}
        </code>
      {{/if}}
    </a>
  </h3>
  
  <div class="index-item-header">
    <div class="cover">
      <a href="{{ this.url }}">
        <img src="{{this.cover_image_url}}" alt="{{this.cover_image_alt}}"/>
      </a>
    </div>
    
    <div>
      <div class="project-details">
        {{#if this.status}}
          <div class="tag-container status-tag">
            <div class="tag" style="background-color: {{statusColor this.status}};">
              <a href="/portfolio/tags/{{this.status}}">{{this.status}}</a>
            </div>
          </div>
        {{/if}}

        <p class="project-date-range">
          {{projectDate this.start_date this.end_date}}
        </p>
        
        <ul class="tags project-tag-list tag-container">
          {{#each this.tags}}
            {{#unless (eq this 'projects')}}
              {{#unless (isSameString this ../this.status)}}
                <li>
                  <a href="/portfolio/tags/{{this}}">{{this}}</a>
                </li>
              {{/unless}}
            {{/unless}}
          {{/each}}
        </ul>

      </div>
      
      {{#if this.index}}
        <p class="project-short-description">
          {{#if this.short_description}}
            {{this.short_description}}
          {{else}}
            {{previewText this.templateContent}}
          {{/if}}
        </p>
        <p class="read-more">
          <a href="{{ this.url }}">Read More â†’</a>
        </p>
      {{else}}
        {{#if (or project_url source_url)}}
          <h3 id="project-links">Links</h3>
        
          <dl class="links" aria-labelledby="project-links">
            {{#if project_url}}
              <div>
                <dt>Project URL</dt>
                <dd>
                  <a href="{{project_url}}" target="_blank">
                    {{ shortUrl project_url }}
                  </a>
                </dd>
              </div>
            {{/if}}
            {{#if source_url}}
              <div>
              <dt>Source URL</dt>
              <dd>
                <a href="{{source_url}}" target="_blank">
                  {{ shortUrl source_url }}
                </a>
              </dd>
              </div>
            {{/if}}
          </dl>
        {{/if}}

      {{/if}}
    </div>
  </div>

</div>