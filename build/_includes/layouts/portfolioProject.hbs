<!DOCTYPE html>
<html lang="en">
  <head>
    {{> boilerplate/head }}
  </head>
  <body>
    <header>
      {{> boilerplate/siteHeader }}
    </header>
    <main>
      <h2 class="page-header">
        <a href="/portfolio">Portfolio</a>
      </h2>
      
      <div class="project">
        
        {{> portfolio/projectHeader }}
        
        <ul class="links">
          {{#if project_url}}
            <li>Project URL: <a href="{{project_url}}" target="_blank">
              {{ shortUrl project_url }}
            </a></li>
          {{/if}}
          {{#if source_url}}
            <li>Source URL: <a href="{{source_url}}" target="_blank">
              {{ shortUrl source_url }}
            </a></li>
          {{/if}}
        </ul>
        
        {{{ content }}}
        
        <ul class="project-images">
        {{#each images}}
          <li><img src="{{this}}" /></li>
        {{/each}}
        </ul>
        
      </div>
    </main>
    {{> boilerplate/analytics }}
  </body>
</html>