<ul class="postlist">
{{#each collections.postsReversed }}
  <li class="post">
      
    <h3>
      <a href="{{ this.url }}">
        {{#if this.data.title }}
          {{ this.data.title }}
        {{else }}
          <code>
            {{ this.url }}
          </code>
        {{/if}}
      </a>
    </h3>
    
    {{#if this.data.cover_image_url }}
    <img src="{{ this.data.cover_image_url }}" alt="{{ this.data.cover_image_alt }}" />
    {{/if }}
    
    <p>
      !!{{ readableDate this.data.date }}
    </p>
    
    <p>
      {{ blogPreview this.templateContent }}
    </p>      
  </li>
{{/each}}
</ul>
