<header>
  <div class="post-date">
    <time datetime="{{machineReadableDate this.date}}">{{readableDate this.date}}</time>
  </div>

  <h3 class="post-title">
    <a href="{{this.url}}">
      {{#if this.title}}
        {{this.title}}
      {{else}}
        <code>
          {{this.url}}
        </code>
      {{/if}}
    </a>
  </h3>

  <div class="index-item-preview">
    {{#if (or this.index (not this.do_not_show_cover_at_top))}}
      {{#if this.cover_image_url}}
        <div class="post-header-image">
          <a href="{{this.url}}">
            <img
              class="index-item-preview-image"
              src="{{this.cover_image_url}}"
              alt="{{this.cover_image_alt}}"
              aria-label="Link to post for {{this.title}}"
            />
          </a>
        </div>
      {{/if}}
    {{/if}}

{{#if (not this.index)}}
  {{#if this.editors_note}}
    <blockquote class="editors-note">
      <h4 class="editors-note-header">
        {{#if this.editors_note_header}}
          {{this.editors_note_header}}
        {{else}}
          Note
        {{/if}}
      </h4>
      <p><em>{{this.editors_note}}</em></p>
    </blockquote>
  {{/if}}
{{/if}}

<div class="index-item-header">
  {{#if (or this.index (not this.do_not_show_cover_at_top))}}
    {{#if this.cover_image_url}}
      <div class="post-header-image {{#if (not this.index)}}full-width{{/if}}">
        <a href="{{this.url}}">
          <img
            class="index-item-header-image"
            src="{{this.cover_image_url}}"
            alt="{{this.cover_image_alt}}"
            aria-label="Link to post for {{this.title}}"
          />
        </a>
      </div>
    {{/if}}
  {{/if}}

  {{#if this.index}}
    <p class="blog-post-preview-text">
      {{previewText this.templateContent}}
      <a href="{{this.url}}" aria-label="Read more about {{this.title}}">
        {{readMore this.templateContent}}&nbsp;â†’</a>
    </p>
  {{/if}}
</div>
