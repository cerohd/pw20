<h3 class="post-title">
  <a href="{{ this.url }}">
    {{#if this.title }}
      {{ this.title }}
    {{else }}
      <code>
        {{ this.url }}
      </code>
    {{/if}}
  </a>
</h3>

<div class="blog-cover">
  
  <p class="post-preview-date">
    {{ readableDate this.date }}
  </p>

  {{#if (or this.index (not this.do_not_show_cover_at_top)) }}
    {{#if this.cover_image_url }}
      <div class="post-header-image">
        <a href="{{ this.url }}">
          <img class="blog-cover-image" src="{{ this.cover_image_url }}" alt="{{ this.cover_image_alt }}" />
        </a>
      </div>
    {{/if }}
  {{/if }}

  {{#if this.index}}
    <p class="blog-post-preview-text">
      {{ previewText this.templateContent }} <a href="{{ this.url }}"> {{ readMore this.templateContent }}&nbsp;â†’</a>
    </p>
  {{/if}}
</div>