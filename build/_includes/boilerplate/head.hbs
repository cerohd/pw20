<title>Patrick Weaver</title>

{{#if (eq env.NODE_ENV "development")}}
<base href="http://localhost:3000" />
{{else }}
<base href="https://www.patrickweaver.net" />
{{/if}}

<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<meta name="description" content="Patrick Weaver’s Website" />
<link id="favicon" rel="icon" href="/images/favicon.png" type="image/png" />

<!-- Social -->
{{#if this.title}}
  <meta property="og:title" content="{{this.title}}" />
  <meta property="og:description" content="{{this.description}}" />
{{else}}
  <meta property="og:title" content="Patrick Weaver" />
  <meta property="og:description" content="Patrick Weaver’s Website" />
{{/if}}
{{#if this.cover_image_url}}
  <meta property="og:image" content="{{this.cover_image_url}}" />
{{else}}
  <meta
    property="og:image"
    content="https://pwapi.s3.amazonaws.com/uploads/twitter-card.png"
  />
{{/if}}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@patrickweave_r" />
<meta name="twitter:creator" content="@patrickweave_r" />
{{#if this.title}}
  <meta name="twitter:title" content="{{this.title}}" />
  <meta name="twitter:description" content="{{this.description}}" />
{{else}}
  <meta name="twitter:title" content="Patrick Weaver" />
  <meta name="twitter:description" content="Patrick Weaver’s Website" />
{{/if}}
{{#if this.cover_image_url}}
  <meta name="twitter:image" content="{{this.cover_image_url}}" />
  <meta name="twitter:image:alt" content="{{this.cover_image_alt}}" />
{{else}}
  <meta
    name="twitter:image"
    content="https://pwapi.s3.amazonaws.com/uploads/twitter-card.png"
  />
  <meta name="twitter:image:alt" content="A screenshot of the website" />
{{/if}}

<link rel="stylesheet" href="/css/style.css" />
